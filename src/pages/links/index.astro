---
import Template from "../../layouts/template.astro";
import Icon from "../../components/icon.astro";
import { t, changeLanguage } from "i18next";
import Twitter from "../../components/buttons/twitter.astro";
import Instagram from "../../components/buttons/instagram.astro";
import Tiktok from "../../components/buttons/tiktok.astro";
import Twitch from "../../components/buttons/twitch.astro";

changeLanguage("es");
---

<Template>
	<section class="absolute animate-fade flex flex-col gap-3 px-2 z-20 w-[90%] md:w-[450px] text-white top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2">
		<article class="flex items-end gap-7 mb-4">
            <Icon 
                height="120"
                width="120"
            />

            <div class="flex flex-col gap-2">
                <h1 class="text-3xl font-bold">
                    Cristiankinggg
                </h1>

                <p class="text-sm text-orange-500">
                    { t('pages.links.description') }
                </p>
            </div>
        </article>

        <Twitter />
        <Instagram />
        <Tiktok />
        <Twitch />
	</section>
</Template>